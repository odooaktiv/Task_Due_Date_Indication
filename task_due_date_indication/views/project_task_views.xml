<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="task_reminder_form">
            <field name="name">ProjectTask</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <field name="tag_ids" position="after">
                    <field name="project_task_reminder" invisible="1"/>
                    <field name="task_reminder"
                           attrs="{'invisible': [('project_task_reminder','=',True)]}"/>
                    <field name="task_interval_duration"
                           attrs="{'invisible': [('task_reminder','=',False)]}"/>
                </field>
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="attrs">{'required': [('task_interval_duration', '>', 0)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="attributes">
                    <attribute name="attrs">{'required': [('task_interval_duration', '>', 0)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>