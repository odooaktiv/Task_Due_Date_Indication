<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        
        <record id="email_template_project_task_due_indication" model="mail.template">
            <field name="name">Task Due Date Indication</field>
            <field name="email_from">${object.company_id.name}&lt;${object.company_id.email}&gt;</field>
            <field name="email_to">${object.user_id.login},${object.project_id.user_id.login}</field>
            <field name="subject">Due Date Completion Reminder - ${object.name or 'n/a' } task dead line is  ${object.date_deadline or 'n/a' }</field>
            <field name="model_id" ref="task_due_date_indication.model_project_task" />
            <field name="auto_delete" eval="True" />
            <field name="body_html"><![CDATA[
                <div class="page">
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; ">
                        <p>Hello,</p>
                        <p>Project name: ${object.project_id.name}
                        <p>Assign date: ${object.date_assign}
                        <p> The due date of Task(${object.name}) is ${object.date_deadline or 'n/a' }</p>
                        <p> Thank you </p>
                    </div>
                </div>
                ]]>
            </field>
        </record>

    </data>
</odoo>
